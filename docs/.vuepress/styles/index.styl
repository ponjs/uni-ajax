th
  white-space nowrap

{$contentClass}:not(.custom), .page .page-edit
  max-width 768px

{$contentClass}:not(.custom)>h1:first-child
  position relative
  &:before
    content ""
    position absolute
    width 3.5em
    height 9px
    background-color rgba($accentColor, .7)
    bottom 0
    left 0

.theme-container .navbar .site-name
  font-weight bold

.page-edit .edit-link
  &::before
    content "发现错误？想参与编辑？ "
  a
    color $accentColor !important